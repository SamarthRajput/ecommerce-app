// backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  businessName String
  businessType String
  phone     String
  street    String
  city      String
  state     String
  zipCode   String
  country   String
  taxId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sellers")
}